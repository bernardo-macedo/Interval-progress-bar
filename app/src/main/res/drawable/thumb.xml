<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp" />
            <solid android:color="#03000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp" />
            <solid android:color="#05000000" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp" />
            <solid android:color="#10000000" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/thumb_size"
                android:height="@dimen/thumb_size" />
            <solid android:color="@color/orange" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:drawable="@drawable/ic_done"
        android:gravity="center"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</layer-list>